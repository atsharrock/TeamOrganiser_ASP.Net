@page
@using Models
@model TeamOrganiser.Pages.FootballGames.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FootballGame</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FootballGame.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FootballGame.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FootballGame.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FootballGame.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FootballGame.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FootballGame.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FootballGame.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FootballGame.Duration)
        </dd>
    </dl>

    <h3 style="text-align:center;">Team One</h3>
    <h5 style="text-align:center;">Rating: @Model.TeamA.TeamRating</h5>
    <h5 style="text-align:center;">Chemistry: @Model.TeamA.TeamChemistryRating</h5>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Defence</th>
            <th>Midfield</th>
            <th>Attack</th>
        </tr>
        @foreach (FootballPlayer p in Model.TeamA.FootballPlayers)
        {
            <tr>
                <td>@p.FirstName @p.LastName</td>
                <td>@p.Rating</td>
                <td>@p.Defence</td>
                <td>@p.Midfield</td>
                <td>@p.Attack</td>
            </tr>
        }
    </table>
    <hr />
    <h1 style="text-align:center;">Versus</h1>
    <hr />
    <h3 style="text-align:center;">Team Two</h3>
    <h5 style="text-align:center;">Rating: @Model.TeamB.TeamRating</h5>
    <h5 style="text-align:center;">Chemistry: @Model.TeamB.TeamChemistryRating</h5>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Defence</th>
            <th>Midfield</th>
            <th>Attack</th>

        </tr>
        @foreach (FootballPlayer p in Model.TeamB.FootballPlayers)
        {
            <tr>
                <td>@p.FirstName @p.LastName</td>
                <td>@p.Rating</td>
                <td>@p.Defence</td>
                <td>@p.Midfield</td>
                <td>@p.Attack</td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.FootballGame.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
