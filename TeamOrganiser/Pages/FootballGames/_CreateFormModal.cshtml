@using TeamOrganiser.Models
@model IndexModel
 
<div class="modal fade" id="createGameModalButton" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create Game</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="height:100px;width:auto;overflow:scroll;" id="SelectedPlayersCheckBoxDiv">
                    @foreach (FootballPlayer p in Model.AllFootballPlayers)
                    {
                        <input type="checkbox" id="@p.ID" /> <span>@p.FirstName @p.LastName</span> <br />
                    }
                </div>

                <form method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FootballGame.Address" class="control-label"></label>
                        <input asp-for="FootballGame.Address" class="form-control" />
                        <span asp-validation-for="FootballGame.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FootballGame.StartTime" class="control-label"></label>
                        <input asp-for="FootballGame.StartTime" class="form-control" />
                        <span asp-validation-for="FootballGame.StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FootballGame.EndTime" class="control-label"></label>
                        <input asp-for="FootballGame.EndTime" class="form-control" />
                        <span asp-validation-for="FootballGame.EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FootballGame.Duration" class="control-label"></label>
                        <input asp-for="FootballGame.Duration" class="form-control" />
                        <span asp-validation-for="FootballGame.Duration" class="text-danger"></span>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
