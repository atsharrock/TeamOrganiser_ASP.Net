@page
@model TeamOrganiser.Pages.FootballGames.CreateModel
@using TeamOrganiser.Models
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FootballGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <textarea>
                @foreach (FootballPlayer p in Model.SelectedFootballPlayers)
                {
                    Html.Raw($"{p.FirstName} {p.LastName}");
                }
            </textarea>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FootballGame.Address" class="control-label"></label>
                <input asp-for="FootballGame.Address" class="form-control" />
                <span asp-validation-for="FootballGame.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballGame.StartTime" class="control-label"></label>
                <input asp-for="FootballGame.StartTime" class="form-control" />
                <span asp-validation-for="FootballGame.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballGame.EndTime" class="control-label"></label>
                <input asp-for="FootballGame.EndTime" class="form-control" />
                <span asp-validation-for="FootballGame.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballGame.Duration" class="control-label"></label>
                <input asp-for="FootballGame.Duration" class="form-control" />
                <span asp-validation-for="FootballGame.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
